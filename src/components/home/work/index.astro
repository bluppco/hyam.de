---
// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/Container.astro"

// IMPORTS ASTRO COMPONENTS
import WorkItem from "./work-item/index.astro"
import VideoWorkItem from "./video-item/index.astro"

const { data } = Astro.props
---
<Container>
    <section class="pb-8 space-y-20">
        {

            data.map( ( value, index ) => {

                if ( index < 1 ) {

                    return(
                        <div class="flex md:justify-end">
                            <WorkItem
                                src="/lala-berlin.avif"
                                alt={ value.name }
                                name={ value.name }
                                title={ value.title }
                                size="w-full md:w-[620px] h-[520px] md:h-[820px]"
                            />
                        </div>
                    )
                }

                else {

                    return(
                        <div class={` ${ index === 4 ? "flex md:justify-end" : "" } ${ index === 2 ? "flex md:justify-end md:py-20" : "" } `}>
                            <VideoWorkItem
                                src="/lala-berlin.avif"
                                alt={ value.name }
                                name={ value.name }
                                title={ value.title }
                                size={` ${ index === 1 || index === 3 || index === 4 ? "w-full md:w-[510px] h-[520px] md:h-[680px]" : "" } ${ index === 2 ? "w-full md:w-[950px] h-[520px] md:h-[530px]" : "" } `}
                            />
                        </div>
                    )

                }

            })

        }
