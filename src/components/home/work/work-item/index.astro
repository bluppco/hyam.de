---
const {

    src,
    alt,
    name,
    title,
    size

} = Astro.props
---
<div class="space-y-2 overflow-hidden">
    <div class={ size }>
        <img
            src={ src }
            alt={ alt }
            class="w-full h-full overflow-hidden"
            style="cursor:url(cursor.svg), auto;"
        />
    </div>
    <div class="pt-4">
        <p class="font-lausanne font-light uppercase">{ name }</p>
    </div>
    <p class="text-lg md:text-4xl font-lausanne font-light uppercase">{ title }</p>
</div>
